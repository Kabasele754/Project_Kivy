<MainScreenView>
    md_bg_color: app.theme_cls.bg_light
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "MY Card"
            left_action_items: [['menu', lambda x: print("My Card")]]
        
        MDBoxLayout:
            orientation: "vertical"
            #padding: "12dp", "10dp", "12dp", "12dp"
            spacing: "24dp"


            ScrollView:
                MDList:
                    id: card_list
                    padding: "24dp"
                    spacing: "24dp"
                    MYCoolCard
                    MYCard

                

               
                
<MYCoolCard>: # Second card esseye  
    orientation: "vertical"
    size_hint: 1, None
    height: "300dp"
    elevation: 20
    radius: 24
    padding: 15

    FitImage:
        source: "https://picsum.photos/id/10/512/512"
        size_hint: 1, None
        height: root.height / 2.8
        #size: 300,200
        radius: [10, 10, 10, 10]
    MDSeparator:
        height: "2dp"
    MDLabel:
        text: "Lorem ipsum"
        bold: True
        adaptive_height: True
        padding: 12, 12
        font_style: "H5"              

    MDLabel:
        padding: 12, 12
        text:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed " \
            "do eiusmod tempor incididunt ut labore et dolore magna aliqua."






<MYCard>: # My card esseye
    orientation: "vertical"
    size_hint: 1, None
    height: "300dp"
    elevation: 20
    radius: 24
    padding: 15

    MDBoxLayout:
        id: hero_from
        #tag: root.tag
        size_hint: 1, None
        height: root.height / 2.9

        FitImage:
            source: "https://picsum.photos/id/1015/512/512"
            size_hint: None, None
            size: hero_from.size
            radius: [10, 10, 10, 10]
    MDLabel:
        text: "Lorem ipsum"
        bold: True
        adaptive_height: True
        padding: 12, 12
        font_style: "H5"

    MDLabel:
        padding: 12, 12
        text:
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed " \
            "do eiusmod tempor incididunt ut labore et dolore magna aliqua."

