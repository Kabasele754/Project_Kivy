<MainScreenView>
    md_bg_color: app.theme_cls.bg_light

    MDBoxLayout:
        orientation: "vertical"
        padding: "12dp", "56dp", "12dp", "12dp"
        spacing: "24dp"

        MDLabel:
            text: "Places"
            bold: True
            font_style: "H4"
            adaptive_height: True
            padding_x: "24dp"

        ScrollView:  
            MDCard:
                orientation: "vertical"
                size_hint: 1, None
                height: "340dp"
                elevation: 20
                radius: 24
                padding: 15

                MDBoxLayout:
                    id: hero_from
                    #tag: root.tag
                    size_hint: 1, None
                    height: root.height / 3.9

                    FitImage:
                        source: "https://picsum.photos/seed/picsum/200/200"
                        size_hint: None, None
                        size: hero_from.size
                        radius: [10, 10, 10, 10]
                MDLabel:
                    text: "Lorem ipsum"
                    bold: True
                    adaptive_height: True
                    padding: 12, 12
                    font_style: "H5"

                MDLabel:
                    padding: 12, 12
                    text:
                        "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed " \
                        "do eiusmod tempor incididunt ut labore et dolore magna aliqua."

