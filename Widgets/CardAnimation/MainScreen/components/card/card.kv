<HeroCard>
    orientation: "vertical"
    size_hint: 1, None
    height: "340dp"
    elevation: 8
    radius: 24
    padding: 12


    MDBoxLayout:
        orientation: "vertical"
        padding: "10dp"
        id: hero_from
        #tag: root.tag
        size_hint: 1, None
        height: root.height / 1.8
        FitImage:
            source: "https://picsum.photos/200/300"
            size_hint: None, None
            size: hero_from.size
            radius: 24
        MDLabel:
            text: "Lorem ipsum"
            bold: True
            size_hint:(1, .15)
            adaptive_height: True
            padding: 12, 12
            font_style: "H5"
            
        MDLabel:
            padding: 12, 12
            text:
                "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed " \
                "do eiusmod tempor incididunt ut labore et dolore magna aliqua." 
    