ExempleGrid:

<ExempleGrid>:
    cols: 3
    background_color: (1, 1, 1, 1)
    canvas.before:
        #Color: self.background_color
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos


    Button:
        text: " A "
        background_normal: ""
        background_color: (1,0,.45,1)

    Image:
        source: "images/Virginia-Tulip-leaves.jpg"
        radius: [20,]
   
    Button:
        text: " C "
        background_normal: ""
        background_color: (0,5,.45,1)

    Image:
        source: "images/tree.jpg"
        radius: [20,]
         
    Button:
        text: " B "
        background_normal: ""
        background_color: (0,.56,.5,1)
    
    Image:
        source: "images/heaven.jpg"
        radius: [20,]
    