CalculatorWidget:
<Button>:
    size_hint: (0.2,0.2)
    background_normal:''
    background_color:(47/255, 77/255, 94/255,1)
<CalculatorWidget>:
    BoxLayout:
        orientation:'vertical'
        size:root.width, root.height
        TextInput:
            id:input_screen
            text:'0'
            font_size:43
            multiline:True
            halign:"right"
            size_hint:(1, 0.19)
            # change the color input
            background_color:(20/255, 20/255, 30/255, 1)
            # change the color text
            foreground_color:(1, 1, 1, 1)
        GridLayout:
            rows:5
            cols:4

            # Row 1
            Button:
                text:"%"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.operators('%')
            Button:
                text:"C"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.effacer()
            Button:
                text: u"\u00AB"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.remove_last()

            Button:
                text:"/"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.operators('/')

            # Row 2
            Button:
                text:"7"
                font_size:32
                on_press: root.button_value(7)
            Button:
                text:"8"
                font_size:32
                on_press: root.button_value(8)
            Button:
                text:"9"
                font_size:32
                on_press: root.button_value(9)

            Button:
                text:"x"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.operators('*')

            # Row 3
            Button:
                text:"4"
                font_size:32
                on_press: root.button_value(4)
            Button:
                text:"5"
                font_size:32
                on_press: root.button_value(5)
            Button:
                text:"6"
                font_size:32
                on_press: root.button_value(6)

            Button:
                text:"-"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.operators('-')

            # Row 4
            Button:
                text:"1"
                font_size:32
                on_press: root.button_value(1)
            Button:
                text:"2"
                font_size:32
                on_press: root.button_value(2)
            Button:
                text:"3"
                font_size:32
                on_press: root.button_value(3)

            Button:
                text:"+"
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.operators('+')
            # Row 5
            Button:
                text:"+/-"
                font_size:32
                on_press:root.positive_negative()
            Button:
                text:"0"
                font_size:32
                on_press: root.button_value(0)
            Button:
                text:"."
                font_size:32
                on_press: root.dot()
            Button:
                text:"="
                font_size:32
                background_color:(93/255, 99/255, 110/255, 1)
                on_press: root.results()
