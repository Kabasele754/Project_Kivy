#:kivy 1.10.0
<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    on_press:
        root.var.populate_fields(self)
<ScreenTwo>:
    user_no_text_input: no
    user_name_text_input: name
    image: image
    AccordionItem:
        title: "INPUT FIELDS"
        GridLayout: 
            rows:3
            BoxLayout:
                size_hint: .5, None
                height: 600
                pos_hint: {'center_x': 1}
                padding: 10
                spacing: 3
                orientation: "vertical"
                Label:
                    text: "Employee ID"
                    size_hint: (.5, None)
                    height: 30
                TextInput:
                    id: no
                    size_hint: (.5, None)
                    height: 30
                    multiline: False
                Label:
                    text: "Employee NAME"
                    size_hint: (.5, None)
                    height: 30
                TextInput:
                    id: name
                    size_hint: (.5, None)
                    height: 30
                    multiline: False
                Label:
                    text: "Employee PHOTO"
                    size_hint: (.5, None)
                    height: 30
                Image:
                    id: image
                    allow_stretch: True
                    keep_ratio: True
                Button:
                    text: "SELECT IMAGE"
                    size_hint_y: None
                    height: self.parent.height * 0.2
                    on_release: root.filechooser()
                Button:
                    id: save_btn
                    text: "SAVE BUTTON"
                    height: 50
                    on_press: root.save()
    AccordionItem:
        title: "RECYCLE VIEW"
